@model AnkiFlashCards.Models.DTO.ResourceViewDto

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View resource in subject: @Html.DisplayFor(model => model.SubjectTitle)</h2>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ResourceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResourceId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.Url" target="_blank"> @Html.DisplayFor(model => model.Url)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeckCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeckCount)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { ResourceId = Model.ResourceId }) |
    <a asp-controller="Deck" asp-action="Index" asp-route-ResourceId="@Model.ResourceId">Decks</a> |
    <a asp-controller="Resource" asp-action="Index" asp-route-SubjectId="@Model.SubjectId">Back to List</a>
</div>
