@model AnkiFlashCards.Models.DTO.DeckViewDto

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Deck @Html.DisplayFor(m=>m.Title)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeckId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeckId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResourceTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResourceTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsShared)
        </dt>
        <dd class="col-sm-10">
            @if (@Model.IsShared == true)
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RevisionCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RevisionCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CardCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastRevisionDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastRevisionDateTime)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Deckid = Model.DeckId }) |
    <a asp-controller="Deck" asp-action="Revise" asp-route-DeckId="@Model.DeckId">Revise</a> |
    <a asp-controller="Deck" asp-action="Quiz" asp-route-DeckId="@Model.DeckId">Quiz</a> |
    <a asp-controller="Deck" asp-action="Index" asp-route-ParentId="@Model.ResourceId">Back to Decks</a>
</div>
